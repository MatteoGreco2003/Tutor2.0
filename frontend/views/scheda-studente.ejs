<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scheda Studente</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/scheda-studente.css" />
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <button class="btn-back" onclick="goBack()" title="Torna indietro">
          <i class="fas fa-chevron-left"></i> Torna al portfolio
        </button>
      </div>
      <h1 class="header-title">ðŸ“‹ Scheda Studente</h1>
      <div class="header-actions">
        <button class="logout-btn" onclick="logoutUser()" title="Esci">
          Disconnettiti
        </button>
      </div>
    </div>

    <!-- Main Container -->
    <div class="container">
      <!-- Info Banner -->
      <div class="info-banner">
        <div class="banner-content">
          <div class="banner-title">
            <div class="user-icon-banner" id="studenteAvatar">M</div>
            <span id="studenteName">Caricamento...</span>
          </div>
          <div class="banner-info">
            <div class="info-item">
              <span class="info-label">Email</span>
              <span class="info-value" id="studenteEmail">-</span>
            </div>
            <div class="info-item">
              <span class="info-label">Scuola</span>
              <span class="info-value" id="studenteScuola">-</span>
            </div>
            <div class="info-item">
              <span class="info-label">Indirizzo</span>
              <span class="info-value" id="studenteIndirizzo">-</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Grid -->
      <div class="sections-grid">
        <!-- Left Column -->
        <div class="column-left">
          <!-- Storico Verifiche -->
          <div class="section-card">
            <div class="section-header">
              <div class="section-title">
                <i class="fas fa-history"></i>
                Storico Verifiche
              </div>
              <span class="badge-count" id="countStorico">0</span>
            </div>
            <div class="section-content" id="storicoContent">
              <div class="empty-state">
                <i class="fas fa-check-circle"></i>
                <p>Nessuna verifica nel passato</p>
              </div>
            </div>
          </div>

          <!-- Verifiche Future -->
          <div class="section-card">
            <div class="section-header">
              <div class="section-title">
                <i class="fas fa-calendar-alt"></i>
                Verifiche Future
              </div>
              <span class="badge-count" id="countFuture">0</span>
            </div>
            <div class="section-content" id="futureContent">
              <div class="empty-state">
                <i class="fas fa-calendar"></i>
                <p>Nessuna verifica pianificata</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="column-right">
          <!-- Materie -->
          <div class="section-card">
            <div class="section-header">
              <div class="section-title">
                <i class="fas fa-book"></i>
                Materie
              </div>
            </div>
            <div class="section-content" id="materieContent">
              <div class="empty-state">
                <i class="fas fa-book"></i>
                <p>Nessuna materia associata</p>
              </div>
            </div>
          </div>

          <!-- Storico Annotazioni -->
          <div class="section-card">
            <div class="section-header">
              <div class="section-title">
                <i class="fas fa-sticky-note"></i>
                Annotazioni
              </div>
              <button
                class="btn-header-action"
                onclick="openAddAnnotazioneModal()"
                title="Aggiungi annotazione"
              >
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
            <div class="section-content" id="annotazioniContent">
              <div class="empty-state">
                <i class="fas fa-sticky-note"></i>
                <p>Nessuna annotazione</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Aggiungi Annotazione -->
    <div class="modal" id="addAnnotazioneModal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Nuova Annotazione</h2>
          <button class="btn-close" onclick="closeAddAnnotazioneModal()">
            &times;
          </button>
        </div>
        <form onsubmit="saveAnnotazione(event)">
          <div class="form-group">
            <textarea
              class="form-control form-control-large"
              id="annotazioneText"
              placeholder="Nuova Annotazione"
              required
            >
            </textarea>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary btn-salva">
              Salva Annotazione
            </button>
            <button
              type="button"
              class="btn btn-secondary btn-annulla"
              onclick="closeAddAnnotazioneModal()"
            >
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
  <!-- Scripts -->
  <script src="/js/api.js"></script>
  <script src="/js/scheda-studente.js"></script>
</html>
