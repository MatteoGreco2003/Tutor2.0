<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profilo Studente</title>
    <link rel="stylesheet" href="css/riepilogo-studente.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <a
          href="/home-studenti"
          class="user-icon"
          style="text-decoration: none; color: inherit"
          >üë§</a
        >
        <a
          href="/home-studenti"
          class="header-title"
          style="text-decoration: none; color: inherit"
          >Nome e Cognome</a
        >
      </div>
      <button class="logout-btn">Disconnettiti</button>
    </div>

    <!-- Main Container -->
    <div class="container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <a href="/home-studenti" class="sidebar-item" data-page="home"
          >üè† Home</a
        >
        <a
          href="/profilo-studente"
          class="sidebar-item active"
          data-page="profilo"
          >üë§ Profilo Studente</a
        >
        <a href="/subject" class="sidebar-item">‚ûï Aggiungi Materie</a>
        <div class="sidebar-item">üìö Media Materie</div>
        <div class="sidebar-footer">
          <div class="sidebar-button">
            <button class="delete-btn">üóëÔ∏è Elimina profilo</button>
          </div>
          <div class="outro">
            <p>
              Powered by
              <a href="https://www.toptutor.it/" target="_blank">toptutor.it</a>
            </p>
          </div>
          <div class="sidebar-socials">
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-facebook"></i></a>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- DATI PERSONALI -->
        <div class="profile-card">
          <div class="card-header">
            <h2 class="card-title">üìã Profilo Studente</h2>
            <button class="edit-btn" id="editPersonalBtn">
              <i class="fas fa-pen"></i> Modifica
            </button>
          </div>

          <div class="card-body">
            <div class="info-grid">
              <div class="info-item">
                <label class="info-label">Nome e Cognome</label>
                <p class="info-value" id="personalNomeCognome">-</p>
              </div>
              <div class="info-item">
                <label class="info-label">Telefono</label>
                <p class="info-value" id="personalTelefono">-</p>
              </div>
              <div class="info-item">
                <label class="info-label">Grado Scolastico</label>
                <p class="info-value" id="personalGrado">-</p>
              </div>
              <div class="info-item">
                <label class="info-label">Indirizzo Scolastico</label>
                <p class="info-value" id="personalIndirizzo">-</p>
              </div>
            </div>

            <!-- EMAIL (non modificabile) -->
            <div class="email">
              <div class="info-item">
                <label class="info-label">Email</label>
                <p class="info-value" id="personalEmail">-</p>
              </div>
            </div>

            <!-- MODIFICA PASSWORD -->
            <div class="modifyPassword">
              <h3>üîê Sicurezza</h3>
              <button class="edit-btn" id="editPasswordBtn">
                <i class="fas fa-lock"></i> Modifica Password
              </button>
            </div>
          </div>
        </div>

        <!-- DATI FAMIGLIA -->
        <div class="profile-card">
          <div class="card-header">
            <h2 class="card-title">üë®‚Äçüë©‚Äçüëß Famiglia</h2>
            <button class="edit-btn" id="editFamilyBtn">
              <i class="fas fa-pen"></i> Modifica
            </button>
          </div>

          <div class="card-body">
            <div class="family-section">
              <h3 class="family-title">Genitore 1</h3>
              <div class="info-grid">
                <div class="info-item">
                  <label class="info-label">Nome e Cognome</label>
                  <p class="info-value" id="familyGen1Nome">-</p>
                </div>
                <div class="info-item">
                  <label class="info-label">Numero di Telefono</label>
                  <p class="info-value" id="familyGen1Tel">-</p>
                </div>
              </div>
            </div>

            <div class="family-section">
              <h3 class="family-title">Genitore 2</h3>
              <div class="info-grid">
                <div class="info-item">
                  <label class="info-label">Nome e Cognome</label>
                  <p class="info-value" id="familyGen2Nome">-</p>
                </div>
                <div class="info-item">
                  <label class="info-label">Numero di Telefono</label>
                  <p class="info-value" id="familyGen2Tel">-</p>
                </div>
              </div>
            </div>

            <div class="family-section">
              <h3 class="family-title">Email Famiglia</h3>
              <div class="info-grid">
                <div class="info-item">
                  <label class="info-label">Email</label>
                  <p class="info-value" id="familyEmail">-</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- DATI SCUOLA -->
        <div class="profile-card">
          <div class="card-header">
            <h2 class="card-title">üè´ Scuola</h2>
            <button class="edit-btn" id="editSchoolBtn">
              <i class="fas fa-pen"></i> Modifica
            </button>
          </div>

          <div class="card-body">
            <div class="info-grid">
              <div class="info-item">
                <label class="info-label">Email Professori</label>
                <div id="schoolEmails">
                  <p class="info-value">-</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Modale Elimina Profilo -->
    <div id="deleteProfileModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeDeleteProfile">&times;</span>
        <h2>Elimina profilo</h2>
        <p>
          Sei sicuro di eliminare il tuo profilo?<br />
          Una volta selezionato <b>Elimina comunque</b> non sarai pi√π in grado
          di recuperare il tuo storico verifiche e le tue informazioni.
        </p>
        <div style="display: flex; gap: 14px; margin-top: 20px">
          <button
            id="confirmDeleteProfile"
            class="delete-btn"
            style="margin: 0"
          >
            Elimina comunque
          </button>
          <button id="cancelDeleteProfile" class="btn-annulla">Annulla</button>
        </div>
      </div>
    </div>

    <!-- Modale Modifica Dati Personali -->
    <div id="editPersonalModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeEditPersonal">&times;</span>
        <h2>Modifica dati personali</h2>
        <p>
          Aggiorna i tuoi dati personali. <br />
          Le modifiche avranno effetto sul tuo account.
        </p>

        <form id="editPersonalForm" novalidate>
          <!-- Nome e Cognome -->
          <div class="form-row">
            <div class="form-group">
              <label for="editNome">Nome</label>
              <input
                type="text"
                id="editNome"
                name="editNome"
                placeholder="Nome"
                required
              />
            </div>
            <div class="form-group">
              <label for="editCognome">Cognome</label>
              <input
                type="text"
                id="editCognome"
                name="editCognome"
                placeholder="Cognome"
                required
              />
            </div>
          </div>

          <!-- Telefono -->
          <div class="form-group">
            <label for="editTelefono">Numero di telefono</label>
            <input
              type="tel"
              id="editTelefono"
              name="editTelefono"
              placeholder="Telefono"
              required
            />
          </div>

          <!-- Grado e indirizzo -->
          <div class="form-row">
            <div class="form-group">
              <label for="editGradoScolastico">Grado scolastico</label>
              <select
                id="editGradoScolastico"
                name="editGradoScolastico"
                required
              >
                <option value="">Seleziona...</option>
                <option value="Elementari">Elementari</option>
                <option value="Medie">Medie</option>
                <option value="Superiori">Superiori</option>
              </select>
            </div>
            <div class="form-group">
              <label for="editIndirizzoScolastico">Indirizzo scolastico</label>
              <select
                id="editIndirizzoScolastico"
                name="editIndirizzoScolastico"
              >
                <option value="">Seleziona...</option>
                <option value="Liceo">Liceo</option>
                <option value="Tecnico">Tecnico</option>
                <option value="Professionale">Professionale</option>
              </select>
            </div>
          </div>

          <!-- Errori -->
          <div id="editPersonalErrors" class="error-messages"></div>

          <!-- Bottoni -->
          <div style="display: flex; gap: 14px; margin-top: 20px">
            <button type="submit" class="btn-save">Salva modifiche</button>
            <button type="button" class="btn-annulla" id="cancelEditPersonal">
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Modale Modifica Password -->
    <div id="editPasswordModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeEditPassword">&times;</span>
        <h2>Modifica password</h2>
        <p>
          Inserisci la tua password attuale e la nuova password che desideri
          impostare.
        </p>

        <form id="editPasswordForm" novalidate>
          <div class="form-group">
            <label for="oldPassword">Password attuale</label>
            <div class="password-input-box">
              <input
                type="password"
                id="oldPassword"
                name="oldPassword"
                autocomplete="current-password"
                placeholder="Password Attuale"
                required
              />
              <i
                class="fa-solid fa-lock toggle-password"
                data-input="oldPassword"
              ></i>
            </div>
          </div>

          <div class="form-group">
            <label for="newPassword">Nuova password</label>
            <div class="password-input-box">
              <input
                type="password"
                id="newPassword"
                name="newPassword"
                autocomplete="new-password"
                placeholder="Nuova Password"
                required
              />
              <i
                class="fa-solid fa-lock toggle-password"
                data-input="newPassword"
              ></i>
            </div>
          </div>

          <div class="form-group">
            <label for="confirmNewPassword">Conferma nuova password</label>
            <div class="password-input-box">
              <input
                type="password"
                id="confirmNewPassword"
                name="confirmNewPassword"
                autocomplete="new-password"
                placeholder="Conferma Nuova Password"
                required
              />
              <i
                class="fa-solid fa-lock toggle-password"
                data-input="confirmNewPassword"
              ></i>
            </div>
          </div>

          <div id="editPasswordErrors" class="error-messages"></div>

          <div style="display: flex; gap: 14px; margin-top: 24px">
            <button type="submit" class="btn-save">Salva nuova password</button>
            <button type="button" class="btn-annulla" id="cancelEditPassword">
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Modale Modifica Dati Famiglia -->
    <div id="editFamilyModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeEditFamily">&times;</span>
        <h2>Modifica dati famiglia</h2>
        <p>
          Aggiorna i contatti e l'email della famiglia.
          <br />Le modifiche avranno effetto sul tuo account.
        </p>

        <form id="editFamilyForm" novalidate>
          <!-- GENITORE 1 -->
          <div class="family-section-edit">
            <h3>Genitore 1</h3>
            <div class="form-row">
              <div class="form-group">
                <label for="editGen1Nome">Nome</label>
                <input
                  type="text"
                  id="editGen1Nome"
                  name="editGen1Nome"
                  placeholder="Nome"
                  required
                />
              </div>
              <div class="form-group">
                <label for="editGen1Cognome">Cognome</label>
                <input
                  type="text"
                  id="editGen1Cognome"
                  name="editGen1Cognome"
                  placeholder="Cognome"
                  required
                />
              </div>
            </div>
            <div class="form-group">
              <label for="editGen1Telefono">Telefono</label>
              <input
                type="tel"
                id="editGen1Telefono"
                name="editGen1Telefono"
                placeholder="Telefono"
                required
              />
            </div>
          </div>

          <!-- GENITORE 2 (OPZIONALE) -->
          <div class="family-section-edit">
            <h3>
              Genitore 2
              <span style="font-size: 12px; font-weight: 400; color: #999"
                >(Opzionale)</span
              >
            </h3>
            <div class="form-row">
              <div class="form-group">
                <label for="editGen2Nome">Nome</label>
                <input
                  type="text"
                  id="editGen2Nome"
                  name="editGen2Nome"
                  placeholder="Nome"
                />
              </div>
              <div class="form-group">
                <label for="editGen2Cognome">Cognome</label>
                <input
                  type="text"
                  id="editGen2Cognome"
                  name="editGen2Cognome"
                  placeholder="Cognome"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="editGen2Telefono">Telefono</label>
              <input
                type="tel"
                id="editGen2Telefono"
                name="editGen2Telefono"
                placeholder="Telefono"
              />
            </div>
          </div>

          <!-- EMAIL FAMIGLIA -->
          <div class="family-section-edit">
            <h3>Email Famiglia</h3>
            <div class="form-group">
              <label for="editEmailFamiglia">Email</label>
              <input
                type="email"
                id="editEmailFamiglia"
                name="editEmailFamiglia"
                placeholder="Email Famiglia"
                required
              />
            </div>
          </div>

          <!-- Errori -->
          <div id="editFamilyErrors" class="error-messages"></div>

          <!-- Bottoni -->
          <div style="display: flex; gap: 14px; margin-top: 24px">
            <button type="submit" class="btn-save">Salva modifiche</button>
            <button type="button" class="btn-annulla" id="cancelEditFamily">
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Modale Modifica Email Professori -->
    <div id="editSchoolModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeEditSchool">&times;</span>
        <h2>Modifica Dati Professori</h2>
        <p>
          Aggiungi, modifica o rimuovi le email.<br />Le modifiche avranno
          effetto sul tuo account.<br />Puoi aggiungere fino a 5 email di
          insegnanti
        </p>

        <form id="editSchoolForm" novalidate>
          <!-- Container email professori -->
          <div id="emailSchoolContainer"></div>

          <!-- Bottone aggiungi -->
          <button
            type="button"
            id="addSchoolEmailBtn"
            class="btn-secondary"
            style="margin-top: 10px"
          >
            Aggiungi Email
          </button>

          <!-- Errori -->
          <div id="editSchoolErrors" class="error-messages"></div>

          <!-- Bottoni -->
          <div style="display: flex; gap: 14px; margin-top: 24px">
            <button type="submit" class="btn-save">Salva modifiche</button>
            <button type="button" class="btn-annulla" id="cancelEditSchool">
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script src="/js/riepilogo-studente.js"></script>
</html>
