<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profilo Studente</title>
    <link rel="stylesheet" href="css/home-studente.css" />
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        <div class="user-icon">üë§</div>
        <div class="header-title">Nome e cognome</div>
      </div>
      <button class="logout-btn">Esci</button>
    </div>

    <!-- Main Container -->
    <div class="container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-item active">üìä Profilo</div>
        <div class="sidebar-item">üìö Materie</div>
        <div class="sidebar-item">‚úì Verifiche</div>
        <div class="sidebar-divider"></div>
        <button class="delete-btn">üóëÔ∏è Elimina profilo</button>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Profilo Sezione -->
        <div class="section">
          <div class="section-header">
            <h1 class="section-title">Profilo studente</h1>
            <button class="edit-btn">‚úèÔ∏è Modifica</button>
          </div>

          <div class="info-grid">
            <div class="info-item">
              <span class="info-label">Nome e cognome</span>
              <span class="info-value">Mario Rossi</span>
            </div>
            <div class="info-item">
              <span class="info-label">Email</span>
              <span class="info-value">mario.rossi@example.com</span>
            </div>
            <div class="info-item">
              <span class="info-label">Grado scolastico</span>
              <span class="info-value">Medie</span>
            </div>
            <div class="info-item">
              <span class="info-label">Tipo di scuola</span>
              <span class="info-value">N/A</span>
            </div>
            <div class="info-item">
              <span class="info-label">Numero di telefono</span>
              <span class="info-value">+39 320 1234567</span>
            </div>
          </div>
        </div>

        <!-- Famiglia Sezione -->
        <div class="section">
          <div class="section-header">
            <h2 class="section-title">Famiglia</h2>
            <button class="edit-btn">‚úèÔ∏è Modifica</button>
          </div>

          <div class="famiglia-grid">
            <div class="parent-card">
              <div class="parent-title">Genitore 1</div>
              <div class="info-item">
                <span class="info-label">Nome e cognome</span>
                <span class="info-value">Anna Rossi</span>
              </div>
              <div class="info-item" style="margin-top: 10px">
                <span class="info-label">Numero di telefono</span>
                <span class="info-value">+39 320 9876543</span>
              </div>
            </div>

            <div class="parent-card">
              <div class="parent-title">Genitore 2</div>
              <div class="info-item">
                <span class="info-label">Nome e cognome</span>
                <span class="info-value">Marco Rossi</span>
              </div>
              <div class="info-item" style="margin-top: 10px">
                <span class="info-label">Numero di telefono</span>
                <span class="info-value">+39 320 5555555</span>
              </div>
            </div>
          </div>

          <div class="info-item" style="margin-top: 20px">
            <span class="info-label">Email famiglia</span>
            <span class="info-value">famiglia.rossi@example.com</span>
          </div>
        </div>

        <!-- Scuola Sezione -->
        <div class="section">
          <div class="section-header">
            <h2 class="section-title">Scuola</h2>
            <button class="edit-btn">‚úèÔ∏è Modifica</button>
          </div>

          <div class="info-item">
            <span class="info-label">Email professore (max 5 mail)</span>
            <span class="info-value">prof1@scuola.it, prof2@scuola.it</span>
          </div>
        </div>

        <!-- Verifiche Sezione -->
        <div class="section">
          <div class="section-header">
            <h2 class="section-title">Storico verifiche</h2>
          </div>

          <div class="verifiche-list">
            <div class="verifica-item">
              <div class="verifica-info">
                <div class="verifica-materia">Verifica 1 (giorno) (voto)</div>
                <div class="verifica-giorno">Matematica - 15/11/2025</div>
              </div>
              <div class="verifica-voto">8</div>
            </div>

            <div class="verifica-item">
              <div class="verifica-info">
                <div class="verifica-materia">Verifica 2 (giorno) (voto)</div>
                <div class="verifica-giorno">Italiano - 18/11/2025</div>
              </div>
              <div class="verifica-voto">7.5</div>
            </div>

            <div class="verifica-item">
              <div class="verifica-info">
                <div class="verifica-materia">Verifica 3 (giorno) (voto)</div>
                <div class="verifica-giorno">Inglese - 20/11/2025</div>
              </div>
              <div class="verifica-voto future">Da fare</div>
            </div>
          </div>

          <button class="add-btn">‚ûï Inserisci una verifica</button>
        </div>

        <!-- Calendario -->
        <div class="calendar-container">
          <div class="calendar-header">
            <h3 class="section-title">Calendario verifiche</h3>
            <div class="calendar-nav">
              <button>&lt;</button>
              <span
                style="font-weight: 500; min-width: 120px; text-align: center"
                >Novembre 2025</span
              >
              <button>&gt;</button>
            </div>
          </div>

          <table class="calendar">
            <thead>
              <tr>
                <th>S</th>
                <th>M</th>
                <th>T</th>
                <th>W</th>
                <th>T</th>
                <th>F</th>
                <th>S</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="empty"></td>
                <td class="empty"></td>
